<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="right" android:weightSum="1">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text" android:layout_weight="0.80"/>
        <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button" android:layout_weight="0.23" android:layout_gravity="left"/>
    </LinearLayout>
    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
              android:id="@+id/data" android:layout_margin="1dp" android:textSize="12pt"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listView" android:layout_gravity="center_horizontal"/>
</LinearLayout>
